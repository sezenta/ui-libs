{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sezenta/antd-schema-form": ["libs/antd-schema-form/src/index.ts"],
      "@sezenta/antd-schema-form-adapter2": [
        "libs/antd-schema-form-adapter2/src/index.ts"
      ],
      "@sezenta/antd-schema-form-adapters": [
        "libs/antd-schema-form-adapter3/src/index.ts"
      ],
      "@sezenta/antd-schema-form-adapters3": [
        "libs/antd-schema-form-adapters/src/index.ts"
      ],
      "@sezenta/connection": ["libs/connection/src/index.ts"],
      "@sezenta/react-native-connection": [
        "libs/react-native-connection/src/index.ts"
      ],
      "@sezenta/react-native-schema-form": [
        "libs/react-native-schema-form/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
